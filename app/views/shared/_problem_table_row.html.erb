<tr id="<%= object.id %>">
  <td class="col-md-6">
    <div class="row">
      <div class="col-md-8 name">
        <%= object.content %>
      </div>
      <div class="col-md-4 comment" style="text-align: right;">
        <%= time_ago_in_words(object.created_at) %> <%= t(:problem_ago) %> | <%= l((object.created_at.in_time_zone('Ekaterinburg')), format: '%a. %e %b, %H:%M') %>
      </div>
    </div>

      <!-- admin controls -->
      <% if current_user.admin? %>
        <%= render 'shared/problem_comment' %>
      <% else %>
        <span class="comment"><%= t( :problem_comment ) %><%= object.admin_comment %></span>
      <% end %>

  </td>
  <td class="col-md-1" style="text-align:center;">
    <%= render 'shared/problem_status', object: object %>
  </td>
  <% if params[:action] == 'all' || params[:action] == '' %>
    <td class="col-md-2">
      <div class="row">
        <div class="col-md-12">
          <%= link_to object.user.name, object.user, class: "name" %>
          <span>@<%= object.user.login %></span>
      </div>
      </div>
        <% if !object.user.filial.nil? %>
          <div class="row">
            <div class="col-md-12">
              <%= object.user.filial.name %> каб. <%= object.user.cabinet %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <%= object.user.filial.address %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <%= object.user.phone %>
            </div>
          </div>
        <% end %>
    </td>
  <% end %>
  <td class="col-md-2" style="text-align:center;">
    <span>
      <% if current_user?(object.user) %>
        <%= link_to object, method: :delete,
                                         data: { confirm: t(:user_you_shure),
                                         title: object.content },
                                         class: "btn-flat icon delete-user" do %>
          <i class="icon-trash"></i>
        <% end %>
      <% end %>
    </span>

  </td>
</tr>