<% provide( :title, t( :all_users ) ) %>

<div id="pad-wrapper">
  <div class="table-wrapper">


    <div class="row header">
      <h3><%= t(:all_users) %></h3>
    </div>

    <div class="row">
      <div class="col-md-12">
        <table class="table table-hover">
        <!-- thead -->
          <thead>
            <tr>
              <th class="sortable"><%= t( :name ) %></th>
              <th class="sortable"><%= t( :login ) %></th>
              <th class="sortable"><%= t( :user_created_at ) %></th>
              <th class="sortable"><%= t( :options ) %></th>
            </tr>
          </thead>
          <tbody>
            <!-- row -->
            <%= render @users %>
          </tbody>
        </table>

        <%= will_paginate %>

      </div>
    </div>
  </div>
</div>
