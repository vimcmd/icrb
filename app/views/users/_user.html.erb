<tr>
  <td>
    <% if user.admin? %>
      <% if user.name.blank?%>
        <%= link_to user.login, user, class: "name", style: "color:#D13333" %>
      <% else %>
        <%= link_to user.name, user, class: "name", style: "color:#D13333" %>
      <% end %>
    <% else %>
      <% if user.name.blank?%>
        <%= link_to user.login, user, class: "name" %>
      <% else %>
        <%= link_to user.name, user, class: "name" %>
      <% end %>
    <% end %>
  </td>
  <td>
    <%= user.login %>
  </td>
  <td class="description">
    <%= l((user.created_at.in_time_zone('Ekaterinburg')), format: '%d %B %Y  %H:%M') %>
  </td>

  <td>
    <% if current_user.admin? && !current_user?(user) %>
      <%= link_to t( :user_delete ), user, method: :delete, data: { confirm: t( :user_you_shure_delete ) + user.name.to_s + "?" } %>
      <!-- add make admin -->
    <% end %>
  </td>

</tr>

