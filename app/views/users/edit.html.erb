                  <option value="7">Врач-психиатр</option>
                  <option value="7">Врач-рентгенолог</option>
                  <option value="7" selected="selected">Врач-терапевт</option>
                  <option value="7">Врач-терапевт участковый</option>
                  <option value="7">Врач-травматолог-ортопед</option>
