        </div>



      <!-- filial -->
        <div class="form-group">
          <%= label_tag 'filial', t(:filial), class: 'col-md-3 control-label' %>
          <div class="col-md-8">
            <%= f.collection_select(:filial_id, @filials, :id, :name, {include_blank: t(:select_filial)}, { class:"ui-select", style:"width:100%; -webkit-appearance: none;", id:"filial" } ) %>
          </div>
        </div>
      <!-- cabinet -->
        <div class="form-group">
          <%= label_tag 'cabinet', t(:cabinet), class: 'col-md-3 control-label' %>
          <div class="col-md-8">
            <%= f.text_field :cabinet, id: 'cabinet', class: 'form-control', placeholder: t( :select_cabinet ) %>
          </div>
        </div>
      <!-- phone -->
        <div class="form-group">
          <%= label_tag 'phone', t(:phone), class: 'col-md-3 control-label' %>
          <div class="col-md-8">
            <%= f.text_field :phone, id: 'phone', class: 'form-control', placeholder: t( :select_phone ) %>
          </div>
        </div>
      <!-- password -->
        <div class="form-group">
          <%= label_tag 'password', t(:password), class: 'col-md-3 control-label' %>
          <div class="col-md-8">
            <%= f.password_field :password, id: 'password', class: 'form-control', placeholder: t( :select_password ) %>
          </div>
        </div>
      <!-- password confirmation -->
        <div class="form-group">
          <%= label_tag 'password_confirmation', t(:password_confirmation), class: 'col-md-3 control-label' %>
          <div class="col-md-8">
            <%= f.password_field :password_confirmation, id: 'password_confirmation', class: 'form-control', placeholder: t( :select_password_confirmation ) %>
          </div>
        </div>
      <!-- submit -->
      <div class="form-group">
        <div class="col-md-3 control-label">

        </div>

        <div class="action">
          <%= f.submit t(:save_changes), disable_with: t(:send_wait) ,class: "btn btn-glow btn-primary primary signup", style:'margin-left:15px;' %>
        </div>
      </div>
      <% end %>
    </div>
    <!-- right column -->
    <div class="col-md-3">
        <div class="alert alert-info">
            <i class="fa fa-lightbulb-o"></i>
            <strong>Краткие инструкции</strong>
